<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Diagonal lines -->
    <item>
        <rotate
                android:fromDegrees="45"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                        android:color="#FFFFFF"
                        android:width="5dp" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
                android:fromDegrees="-45"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="-45">
            <shape android:shape="line">
                <stroke
                        android:color="#FFFFFF"
                        android:width="5dp" />
            </shape>
        </rotate>
    </item>

</layer-list>