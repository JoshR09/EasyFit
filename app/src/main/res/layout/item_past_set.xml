<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvPastReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps: "
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="57dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" />

    <TextView
            android:id="@+id/tvPastWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toStartOf="@+id/tvPastWeightValue"
            android:layout_marginEnd="17dp" />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPastRepsValue"
            android:layout_marginStart="29dp"
            app:layout_constraintStart_toEndOf="@+id/tvPastReps"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPastWeightValue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="33dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
