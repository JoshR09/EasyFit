<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="20dp">

    <TextView
            android:id="@+id/tvPastReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps: "
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold" android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:id="@+id/tvPastWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: "
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold" android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvPastWeightValue"
            android:layout_marginEnd="15dp" app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPastRepsValue"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold" android:textColor="#000000"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/tvPastReps"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPastWeightValue"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold" android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
