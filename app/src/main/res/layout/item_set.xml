<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps: "
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
    />
    <EditText
            android:id="@+id/etReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
            android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/tvReps"/>
    <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@+id/etWeight" android:layout_marginEnd="32dp"/>
    <EditText
            android:id="@+id/etWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
            android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>