<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps: "
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lato_bold" android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="25dp"/>
    <EditText
            android:id="@+id/etReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/tvReps"
            android:textColor="#000000" android:fontFamily="@font/lato_bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"/>
    <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: "
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@+id/etWeight" android:layout_marginEnd="20dp"
            android:textColor="#000000" android:fontFamily="@font/lato_bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="25dp"
            android:layout_marginStart="38dp" app:layout_constraintStart_toEndOf="@+id/etReps"/>
    <EditText
            android:id="@+id/etWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"
            android:textColor="#000000" android:fontFamily="@font/lato_bold"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/tvWeight"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="38dp" android:id="@+id/completeSet"
            android:layout_marginEnd="25dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp" android:text="Log"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
            android:background="@drawable/small_pink_pink_gradient"
            android:fontFamily="@font/lato_bold" android:textColor="#FFFFFF" android:textSize="14sp"
            android:elevation="4dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>